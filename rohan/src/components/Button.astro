---
import { cn } from '@/utils'
const { 
	as: Tag = 'a', 
	class: className, 
	title, 
	href, 
	style = 'button',
	img
} = Astro.props
---

<Tag
	class={cn(
		className,
		'inline-flex items-center gap-x-1 rounded-lg bg-primary-foreground border border-border px-2 py-1 text-sm transition-all hover:bg-input',
		!href && 'cursor-default',
		style === 'pill' && 'rounded-xl' && 'border-gray-700'
	)}
	href={href}
	data-astro-prefetch
>
	{img && <span set:html={img} class="w-4 h-4" />}
	<p>{title}</p>
	<slot name='icon-after' />
</Tag>